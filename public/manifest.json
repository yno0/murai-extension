{
  "manifest_version": 3,
  "name": "MURAi - Online Word Moderator",
  "description": "Moderates inappropriate words on webpages using NLP",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}